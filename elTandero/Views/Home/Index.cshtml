                                </select>
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                                <a href="javascript:void(0);" id="addPop" class="button">></a>
                                <a href="javascript:void(0);" id="removePop" class="button"><</a>
                            </div>
                            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5" style="padding-right: 0px; padding-left: 0px;">
                                <select id="selectDistriList" name="selectDistriList" multiple="multiple" style="width: 100%"></select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label control-label-sm col-sm-4">Encabezado de tanda:</label>
                        <div class="col-sm-8">
                            <select id="ddwEncabeadoTanda" data-toggle="tooltip" data-placement="top" title="" data-original-title="Encabezado de tanda" class="form-control form-control-sm" placeholder="Tipo">
                                <option value="0">SI</option>
                                <option value="1">NO</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnNuevoEvento" type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Imprimir</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>
        </div><!-- /.modal-content -->
