<div id="myModal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Campaña</h4>
            </div>
            <div class="modal-body" style="max-height: 480px; overflow-y: auto; margin-right: 10px;">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label control-label-sm col-sm-4">Categoria</label>
                        <div class="col-sm-8">
                            <select id="ddwCategoria" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Categoría" class="form-control form-control-sm" placeholder="Nombre categoría">
                                <option value="0">Universidades</option>
                                <option value="1">Telefónicas</option>
                                <option value="2">Restaurantes</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label control-label-sm col-sm-4">Tipo:</label>
                        <div class="col-sm-8">
                            <select id="ddwTipo" data-toggle="tooltip" data-placement="top" title="" data-original-title="Tipo" class="form-control form-control-sm" placeholder="Tipo">
                                <option value="0">Efectivo</option>
                                <option value="1">Auspiciado</option>
                                <option value="2">Intercambio</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label control-label-sm col-sm-4">Nombre o empresa</label>
                        <div class="col-sm-8">
                            <input id="txtEmpresa" type="text" data-toggle="tooltip" data-placement="top" title="" data-original-title="Nombre o empresa" class="form-control form-control-sm" maxlength="50" placeholder="Nombre o empresa"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label control-label-sm col-sm-4">Campaña</label>
                        <div class="col-sm-8">
                            <input id="txtCampaña" type="text" data-toggle="tooltip" data-placement="top" title="" data-original-title="Campaña" class="form-control form-control-sm" maxlength="50" placeholder="Nombre campaña"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label control-label-sm col-sm-4">Duración</label>
                        <div class="col-sm-8">
                            <input id="txtDuracion" type="text" data-toggle="tooltip" data-placement="top" title="" data-original-title="Duración" class="form-control form-control-sm" maxlength="50" placeholder="Duración"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label control-label-sm col-sm-4">Voz</label>
                        <div class="col-sm-8">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left: 1px;">
                                <label class="control-radio">
                                    <input name="grupoTipoPernocte" value="1" type="radio" checked="checked"> Masculino
                                </label>
                                <label class="control-radio">
                                    <input name="grupoTipoPernocte" value="2" type="radio"> Femenino
                                </label>
                                <label class="control-radio">
                                    <input name="grupoTipoPernocte" value="3" type="radio"> Single
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label control-label-sm col-sm-4">Inicia</label>
                        <div class="col-sm-8">
                            <input id="dpkInicio" type="text" data-toggle="tooltip" data-placement="top" title="" data-original-title="Fecha inicio del evento" class="form-control form-control-sm ctrl-calendar red-tooltip" maxlength="50" placeholder="Fecha inicio"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label control-label-sm col-sm-4">Termina</label>
                        <div class="col-sm-8">
                            <input id="dpkFin" type="text" data-toggle="tooltip" data-placement="top" title="" data-original-title="Fecha fin del evento" class="form-control form-control-sm ctrl-calendar red-tooltip" maxlength="50" placeholder="Fecha fin"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label control-label-sm col-sm-4">Días</label>
                        <div class="col-sm-8">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding-left: 1px;">
                                <label class="control-radio">
                                    <input name="grupoTipoPernocte" value="1" type="checkbox" checked="checked"> Lu
                                </label>
                                <label class="control-radio">
                                    <input name="grupoTipoPernocte" value="2" type="checkbox"> Ma
                                </label>
                                <label class="control-radio">
                                    <input name="grupoTipoPernocte" value="3" type="checkbox"> Mi
                                </label>
                                <label class="control-radio">
